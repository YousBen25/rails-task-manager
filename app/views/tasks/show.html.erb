<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<div>
  <% if @task.completed? %>
      <i class="far fa-check-square"></i>
      <p>completed</p>
    <% else %>
      <i class="far fa-square"></i>
      <p>not completed yet</p>
    <% end %>
</div>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Mark #{@task.title} as completed",
            complete_task_path(@task),
            method: :patch,
            data: { confirm: "Keep going, only #{Task.count - 1}" } %>

<%= link_to edit_path(@task) do %>
  <i class="fas fa-edit"></i>
<% end %>
<%= link_to "Go back the the list", tasks_path  %>
