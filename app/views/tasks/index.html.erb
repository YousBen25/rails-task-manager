<h1>My tasks</h1>
<div class="recipe-list">
  <% @tasks.each_with_index do |task| %>
  <li>
    <% if task.completed? %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task_path(task) do %>
    <%= task.title %>
    <% end %>
    <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title} ?" } do %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </li>
  <% end %>
</div>
<br>
<hr>
<%= link_to " + Create a new task", tasks_new_path%>



